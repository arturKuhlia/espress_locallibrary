extends layout

block content

  h1 Delete Region: #{region.name}
  
  if region_jobs.length
  
    p #[strong Delete the following jobs before attempting to delete this region.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Jobs
    
      dl
      each job in region_jobs
        dt 
          a(href=job.url) #{job.title}
        dd #{job.summary}

  else
    p Do you really want to delete this Region?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=region._id )

      button.btn.btn-primary(type='submit') Delete
extends layout

block content

  h1 #{title}
          
  form(method='POST' action='')
    div.form-group
      label(for='name') Region:
      input#name.form-control(type='text', placeholder='Balcony, facade repair etc.' name='name' required='true' value=(undefined===region ? '' : region.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg